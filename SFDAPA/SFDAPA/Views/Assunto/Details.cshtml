@model Model.Models.Assunto

@{
                /**/

                ViewBag.Title = "Details";
}

<h2>Detalhes</h2>

@if (@ViewBag.Sessao != 1)
{
    <div>
        <h4>Assunto</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Editar", "Edit", new { id = Model.Codigo }) |
        @Html.ActionLink("Voltar", "Index", new { id = ViewBag.Aula })
    </p>
} else { 
<div>
    <h4>Assunto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Voltar", "Index", new { id = ViewBag.Aula })
</p>
}